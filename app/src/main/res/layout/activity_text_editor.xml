<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".TextEditor">

    <EditText
        android:id="@+id/note_title_edit_text"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ems="20"
        android:gravity="start|top"
        android:hint="Note Title"
        android:autofillHints="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonBold"
            android:src="@drawable/ic_baseline_format_bold_24"/>

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonItalics"
            android:src="@drawable/ic_baseline_format_italic_24"/>

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonUnderline"
            android:src="@drawable/ic_baseline_format_underlined_24"/>

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonNoFormat"
            android:src="@drawable/ic_baseline_format_clear_24"/>

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonAlignmentLeft"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonAlignmentCenter"
            android:src="@drawable/ic_baseline_center_focus_strong_24"/>

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonAlignmentRight"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

    </LinearLayout>

    <EditText
        android:id="@+id/note_content_edit_text"
        android:layout_marginTop="20dp"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Type note contet here"
        android:inputType="textMultiLine"
        android:autofillHints="" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textAllCaps="false"
        android:onClick="saveAndExit"/>

</LinearLayout>